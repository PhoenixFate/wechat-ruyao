/* pages/individual/individual.wxss */

page {
  color: #fff;
  text-shadow: 0px 1px 1px #444;
  background: #98ccfe;
}

.whole {
  padding: 190rpx 0rpx 100rpx;
}

.row {
  width: 700rpx;
  height: 260rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.column {
  height: 220rpx;
  width: 220rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.role {
  height: 220rpx;
  width: 220rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.big_role {
  height: 260rpx;
  width: 260rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.message_modifyTeamName {
  height: 380rpx;
  width: 500rpx;
  padding: 30rpx;
  position: absolute;
  top: 400rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  z-index: 70;
  left: 13%;
}

.modifyTeamName {
  width: 500rpx;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.modifyTeamName_first {
  width: 250rpx;
  height: 120rpx;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.modifyTeamName_second {
  width: 250rpx;
  height: 120rpx;
  border-radius: 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.addBorder {
  border: 3rpx solid #fff;
}

.photo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.photo_image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin: 5rpx;
}

.btn-twinkle {
  color: #fff;
  border: none;
  animation: twinkle 1s alternate infinite;
}

@keyframes twinkle {
  from {
    background: #16e2eb;
  }

  to {
    background: #3b6e99;
  }
}
