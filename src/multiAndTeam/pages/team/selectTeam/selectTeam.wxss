  margin: 0;
  width: 100%;
  height: 180rpx;
}

.second {
  width: 600rpx;
  min-height: 800rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-start;
  margin: 184rpx 0 150rpx 0rpx;
}

.second_text {
  width: 600rpx;
  box-shadow: 0rpx 4rpx 4rpx #444;
  height: 130rpx;
  line-height: 130rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: -webkit-linear-gradient(left, #65ddff, #52c4ff, #4cadfa);
  border-radius: 20rpx;
  margin-bottom: 10rpx;
}

.third {
  height: 180rpx;
  position: fixed;
  top: 83%;
  width: 100%;
  margin: 30rpx 0 20rpx;
  background: #c6d9f5;
}

.third_text {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 600rpx;
  height: 100rpx;
  border: 1px solid #eee;
  border-radius: 50rpx;
  box-shadow: 0rpx 4rpx 4rpx #666;
  background: #6cf;
}

.current {
  background-color: #234;
}

