page {
  color: #fff;
  background: #c6d9f5;
  position: relative;
  height: 100%;
}

.container{
  background-size: 100% 100%;
}

.item {
  width: 600rpx;
  margin: 30rpx 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.first {
  /* height: 50rpx;
