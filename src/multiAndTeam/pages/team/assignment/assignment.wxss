/* pages/base/house/house.wxss */
@import "../../../../common/common.wxss";

page {
  color: #fff;
  background: #98ccfe;
  height: 100%;
}

.container {
  background-size: 100% 100%;
}

.item {
  width: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.first {
  height: 180rpx;
  z-index: 100;
  background: #00a7fa;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border: 1rpx solid #66ccff;
  border-bottom: 0;
  box-shadow: 0 13rpx 0 #4db6fd;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  margin-bottom: 13rpx;
  width: 698rpx;
}

.first_text1 {
  border-radius: 50rpx;
  background: #fff;
  padding: 0 30rpx;
  border: 1px solid #36aeff;
  color: #444;
}

.first_text2 {
  border-radius: 50rpx;
  background: #fff;
  padding: 0 30rpx;
  color: #444;
  border: 1px solid #36aeff;
}

.first_text {
  /* border: 1px solid black;*/
  line-height: 55rpx;
}

.second {
  margin-top: 0;
  height: 180rpx;
  background: #e4e4e4;
  border-bottom: 1px dashed #ccc;
  border-left: 2px solid #6cf;
  border-right: 2px solid #6cf;
  width: 694rpx;
  display: flex;
  justify-content: center;
}

.second_first {
  height: 50rpx;
  width: 600rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  color: #444;
  margin-bottom: 10rpx;
}

.second_second {
  width: 600rpx;
  height: 50rpx;
}

.third {
  height: 600rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  border-left: 2px solid #6cf;
  border-right: 2px solid #6cf;
  width: 694rpx;
  background: #fff;
  color: #444;
}

.third_content {
  border-bottom: 1px dashed #ccc;
  width: 694rpx;
  height: 150rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.third_content1 {
  width: 346rpx;
  height: 150rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  border-right: 1px dashed #ccc;
}

.third_content2 {
  width: 347rpx;
  height: 150rpx;
  background: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
}

.third_content_first {
  width: 200rpx;
  border: 1px solid black;
}

.third_content_second {
  width: 260rpx;
  border: 1px solid black;
}

.forth {
  width: 694rpx;
  height: 180rpx;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  background: #fff;
  border-left: 2px solid #6cf;
  border-right: 2px solid #6cf;
  box-shadow: 0 4rpx 4rpx #6cf;
}

.fifth {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.forth_text {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 340rpx;
  height: 60rpx;
  border-radius: 10rpx;
  color: #fff;
  background: #22b78b;
  letter-spacing: 10rpx;
}

.progress {
  border-radius: 50rpx;
}

.message {
  height: 400rpx;
  width: 400rpx;
  position: absolute;
  left: 170rpx;
  top: 400rpx;
  background-color: rgba(0, 0, 0, 0.8);
  opacity: 0.8;
  border-radius: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.change {
  background-color: #aaa;
}

.addBorder {
  border: 3rpx solid #000;
}

.item_number {
  width: 100rpx;
  height: 100rpx;
  font-size: 50rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.addAndMinus {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  font-size: 70rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
