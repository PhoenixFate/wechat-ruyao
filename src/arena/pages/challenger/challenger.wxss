page {
  background:#99ccff;
  color: #fff;
}

.userinfo-avatar {
  width: 165rpx;
  height: 165rpx;
  margin: 15rpx;
  border-radius: 50%;
}

.item {
  border: 1px solid black;
  width: 650rpx;
  margin: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

