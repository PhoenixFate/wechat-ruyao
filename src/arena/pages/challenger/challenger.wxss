  height: 290rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:space-around;
  border-top-left-radius: 15rpx;
  border-top-right-radius: 15rpx;
  background: -webkit-linear-gradient(top, #40a1ff, #38a3f1, #61aff9);
  border: 0;
  border-bottom: 4rpx solid #ffffaf;
  margin-bottom: 0;

}

