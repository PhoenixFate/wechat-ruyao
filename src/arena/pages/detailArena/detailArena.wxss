  flex-direction: column;
}

.forth {
  min-height: 300rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  background: #5b96fe;
  color: #fff;
  border-bottom-left-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  padding-bottom: 30rpx;
  margin-bottom: 20rpx;
}

.fifth {
  height: 100rpx;
  border: 1px solid #88a9ff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  border-radius: 50rpx;
  background: #5ba5fc;
  color: #fff;
  line-height: 70rpx;
}

