  line-height: 40rpx;
}

.third {
  min-height: 280rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  background: #5b96fe;
  color: #fff;
  border-bottom: 1px solid #8abdff;
  padding: 40rpx 30rpx;
