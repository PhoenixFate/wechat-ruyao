}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.item {
  width: 660rpx;
  border: none;
  font-size: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

